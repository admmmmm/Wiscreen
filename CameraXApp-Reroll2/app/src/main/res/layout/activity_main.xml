<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- 相机预览视图 (全屏) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 顶部引导提示 -->
    <TextView
        android:id="@+id/guideTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请拍摄3张照片设定健康距离"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 人脸占比信息 -->
    <TextView
        android:id="@+id/faceAreaRatioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Face Area Ratio: 0.00"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/guideTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 进度提示：位于人脸占比信息下方 -->
    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度: 0/3"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/faceAreaRatioTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 拍照按钮 (底部居中) -->
    <Button
        android:id="@+id/imageCaptureButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_circle"
        android:text="拍照"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- 自定义圆形背景 -->

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/blurContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 调试控件 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/debugPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 最大模糊半径调节 -->
        <TextView
            android:id="@+id/tvMaxBlur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最大半径:30px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"/>

        <SeekBar
            android:id="@+id/seekMaxBlur"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="50"
            app:layout_constraintStart_toEndOf="@id/tvMaxBlur"
            app:layout_constraintTop_toTopOf="@id/tvMaxBlur"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>

        <!-- 曲线陡峭度调节 -->
        <TextView
            android:id="@+id/tvSteepness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陡峭度:15"
            app:layout_constraintStart_toStartOf="@id/tvMaxBlur"
            app:layout_constraintTop_toBottomOf="@id/tvMaxBlur"
            android:layout_marginTop="8dp"/>

        <SeekBar
            android:id="@+id/seekSteepness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="30"
            app:layout_constraintStart_toStartOf="@id/seekMaxBlur"
            app:layout_constraintEnd_toEndOf="@id/seekMaxBlur"
            app:layout_constraintTop_toTopOf="@id/tvSteepness"/>

        <!-- 激活偏移调节 -->
        <TextView
            android:id="@+id/tvOffset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="偏移:5%"
            app:layout_constraintStart_toStartOf="@id/tvSteepness"
            app:layout_constraintTop_toBottomOf="@id/tvSteepness"
            android:layout_marginTop="8dp"/>

        <SeekBar
            android:id="@+id/seekOffset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="20"
            app:layout_constraintStart_toStartOf="@id/seekSteepness"
            app:layout_constraintEnd_toEndOf="@id/seekSteepness"
            app:layout_constraintTop_toTopOf="@id/tvOffset"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

